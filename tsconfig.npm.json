{
	"jsx": "react",
	"compilerOptions": {
		"target": "es6",
		"declaration": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
    "jsx": "react-jsx",
		"noFallthroughCasesInSwitch": true,
		"module": "esnext"
	},
	"files": [
		"./index.tsx"
	],
	"include": [
		"src/core/**/*.ts",
		"src/core/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}