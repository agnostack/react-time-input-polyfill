{
  "jsx": "react",
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "cypress"
    ],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
		"noImplicitAny": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "npm",
  },
  "files": [
    "./index.tsx"
  ],
  "include": [
    "src/core/**/*.ts",
    "src/core/**/*.tsx",
    "cypress/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
